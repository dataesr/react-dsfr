{
  "name": "@dataesr/react-dsfr",
  "version": "0.6.0",
  "private": false,
  "description": "A React implementation of the french government design system.",
  "license": "MIT",
  "repository": "dataesr/react-dsfr",
  "main": "dist/index.cjs.js",
  "source": "src/index.js",
  "keywords": [
    "react",
    "components",
    "design-system",
    "gouvfr"
  ],
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.3",
    "@gouvfr/dsfr": "^1.1.0",
    "classnames": "^2.3.1",
    "html-react-parser": "^1.2.7",
    "prop-types": "^15.7.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@axe-core/react": "^4.2.2",
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-eslint": "^8.0.1",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.7",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-react-app": "^6.0.0",
    "gh-pages": "^3.2.3",
    "install": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-styleguidist": "^11.1.7",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.56.2",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-visualizer": "^5.5.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "scripts": {
    "build": "rollup -c",
    "deploy": "gh-pages -d build -r https://$GH_PAT@github.com/dataesr/react-dsfr.git",
    "guide": "npx styleguidist server",
    "predeploy": "styleguidist build",
    "start": "rollup -c --watch",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:coverage": "CI=true npm test -- --coverage",
    "test:dev": "react-scripts test --watchAll",
    "test:dev:coverage": "react-scripts test  --watchAll --coverage",
    "test:debug": "react-scripts --inspect test --runInBand --no-cache",
    "test:lint": "eslint .",
    "test:nowatch": "react-scripts test --watchAll=false",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom"
  },
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
