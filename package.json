{
  "name": "@dataesr/react-dsfr",
  "version": "0.1.0",
  "private": false,
  "description": "A React implementation of the french government design system.",
  "license": "MIT",
  "repository": "dataesr/react-dsfr",
  "main": "dist/index.js",
  "source": "src/index.js",
  "keywords": [
    "react",
    "components",
    "design-system",
    "gouvfr"
  ],
  "module": "dist/index.modern.js",
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@gouvfr/dsfr": "^0.6.0",
    "classnames": "^2.2.6",
    "html-react-parser": "^1.2.4",
    "react-children-utilities": "2.2.4",
    "prop-types": "^15.7.2",
    "react-dom": "^17.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/runtime": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-eslint": "^8.0.1",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^13.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.1",
    "gh-pages": "^3.1.0",
    "install": "^0.13.0",
    "jest-dom": "^4.0.0",
    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "react-styleguidist": "^11.1.5",
    "react-test-renderer": "^17.0.1",
    "rollup": "^2.39.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-minify": "^1.0.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "web-vitals": "^1.0.1"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs --jsxFragment React.Fragment",
    "start": "microbundle-crl watch --no-compress --format modern,cjs --jsxFragment React.Fragment",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "build:rollup": "rollup -c",
    "guide:predeploy": "styleguidist build",
    "deploy": "gh-pages -d build -r https://$GH_PAT@github.com/dataesr/react-dsfr.git",
    "guide": "npx styleguidist server",
    "test:dev": "react-scripts test --watchAll",
    "test:dev:coverage": "react-scripts test  --watchAll --coverage",
    "test:debug": "react-scripts --inspect test --runInBand --no-cache",
    "test:nowatch": "react-scripts test --watchAll=false",
    "test:coverage": "CI=true npm test -- --coverage"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(react-children-utilities|@gouvfr/dsfr)/)"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
